<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/select_station_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_station"
        style="@style/PaddedText"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/station_id_text"
        style="@style/PaddedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_station_text"
        android:text="@string/station_id"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/stationId"
        style="@style/PaddedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/station_id_text"
        android:layout_alignBaseline="@id/station_id_text"
        android:ems="10"
        android:inputType="number" />

    <ListView
        android:id="@+id/station_list"
        android:layout_below="@+id/station_id_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FF88ff88"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coins"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/coins"
            android:layout_marginRight="10dp"
            android:contentDescription="description" />

        <TextView
            android:id="@+id/history_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="     "
            android:textAppearance="@style/textAppearanceListItem"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/history_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/history_text"
            android:layout_toRightOf="@+id/history_text"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/history_date_text"
            android:textStyle="bold"
            android:text="Test"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/history_date_text"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    <TextView
        android:id="@+id/credit_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:minHeight="?attr/listPreferredItemHeightSmall"
        android:paddingRight="16dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:gravity="center_vertical" />

</RelativeLayout>
